{
    "name": "olcs/olcs-utils",
    "description": "OLCS Utils",
    "require": {
        "php": "^7.4"
    },
    "autoload": {
      "psr-4": {
        "Dvsa\\Olcs\\Utils\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "OlcsTest\\Utils\\": "test/"
      }
    },
    "require-dev": {
        "olcs/olcs-logging": "~4.206.0",
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6",
        "johnkary/phpunit-speedtrap": "^4.0",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "laminas/laminas-dependency-plugin": true
        }
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "post-install-cmd": [
            "@composer bin all install"
        ],
        "test": "phpunit",
        "phpcs": "phpcs",
        "psalm": "psalm",
        "phpstan": "phpstan",
        "all": [
            "@test",
            "@phpcs",
            "@psalm",
            "@phpstan"
        ]
    },
    "bamarni-bin": {
      "bin-links": true,
      "forward-command": true
    }
}
