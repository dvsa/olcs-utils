{
    "name": "olcs/olcs-utils",
    "description": "OLCS Utils",
    "require": {
        "php": "^7.4",
        "laminas/laminas-view": "^2.11",
        "laminas/laminas-servicemanager": "^2.7",
        "laminas/laminas-i18n": "^2.14",
        "laminas/laminas-eventmanager": "^2.6",
        "laminas/laminas-http": "^2.8",
        "container-interop/container-interop": "^1.2",
        "laminas/laminas-mvc": "^2.7",
        "psr/container": "^1.1|^2.0"
    },
    "autoload": {
      "psr-4": {
        "Dvsa\\Olcs\\Utils\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Dvsa\\OlcsTest\\Utils\\": "test/"
      }
    },
    "require-dev": {
        "olcs/olcs-logging": "dev-add-workflows",
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6",
        "johnkary/phpunit-speedtrap": "^4.0",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "laminas/laminas-dependency-plugin": true
        }
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "post-install-cmd": [
            "@composer bin all install"
        ],
        "test": "phpunit",
        "phpcs": "phpcs",
        "psalm": "psalm",
        "phpstan": "phpstan",
        "all": [
            "@test",
            "@phpcs",
            "@psalm",
            "@phpstan"
        ]
    },
    "extra" : {
      "bamarni-bin": {
        "bin-links": true,
        "forward-command": true
      }
    }
}
